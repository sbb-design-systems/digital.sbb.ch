<div id="body-overlay"></div>
<dialog id="sidebar">
    <div id="componentbrowser" class="browser component">
        <div class="browser-header-component">   
        <div>
            <sbb-title level="5" class="browser-title">{{ translations[page.lang].findcomponent }}</sbb-title>
            <p class="metal no-margin">{{dsname}}</p>
        </div>
        <div>
        <sbb-secondary-button size="m" id="list-toggle" aria-label="list">
        <sbb-icon slot="icon" name="list-small"></sbb-icon>
        </sbb-secondary-button>
        <sbb-secondary-button size="m" id="close-browser">
            <sbb-icon slot="icon" name="cross-small"></sbb-icon>
        </sbb-secondary-button>
        </div>
        <sbb-form-field error-space="none" size="m" width="default" borderless floating-label>
            <label>{{ translations[page.lang].searchinput }}</label>
            <input id="search-form-field" class="search" placeholder="{{ translations[page.lang].searchinput }}" value="">
        </sbb-form-field>
        </div>
        <div class="component-list horizontal list component">
            <sbb-title level="5" class="browser-title">Basics</sbb-title>
            {% set basicPages = collections.all | include("data.parent", dsbasics) | sortByOrder %}
            {%- for entry in basicPages %}
                {% include "./component.njk" %}
            {%- endfor -%}
            <sbb-title level="5" class="browser-title">Components</sbb-title>
            {% set componentsPages = collections.all | include("data.parent", dscomponents) | sortByOrder %}
            {%- for entry in componentsPages %}
                {% include "./component.njk" %}
            {%- endfor -%}
        </div>
    </div>
</dialog>