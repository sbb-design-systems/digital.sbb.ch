{% if pattern.config.hasAnatomy == true %}
    {% set anatomypath = ["src/_data/", system, "/components/", component, "/anatomy_", language, ".md"] | join %}
    {% set anatomy %}{% include anatomypath %}{% endset %}
    <sbb-tab-label level="1">
    <sbb-icon name="{{tabs[1].icon}}" slot="icon"></sbb-icon>
    {{tabs[1].label[language]}}
    </sbb-tab-label>
    <sbb-tab>
        {{ anatomy | renderUsingMarkdown | safe }}
    </sbb-tab>
{% endif %}