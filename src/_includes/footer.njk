<sbb-footer variant="default" accessibility-title="Footer">
    <div class="sbb-grid-expanded footer-content">
        <div class="contact">
            <sbb-title level="2" visual-level="5" class="footer-title">{{ translations[page.lang].contact }}</sbb-title>
            {%- for footer in collections.footer -%}
                {% if footer.data.language == page.lang %}
                    {{ footer.content | safe }}
                {% endif %}
            {%- endfor -%}
        </div>
        <div class="clock">
            <sbb-clock initial-time="now"></sbb-clock>
        </div>
        <sbb-divider class="footer-divider"></sbb-divider>
    </div>
    <div class="sbb-grid-expanded footer-content">
        <sbb-link-list horizontal-from="large" class="impressum">
            <sbb-block-link href="/{{page.lang}}/meta/impressum/">{{ translations[page.lang].impressum }}</sbb-block-link>
            <sbb-block-link href="/{{page.lang}}/meta/contact/">{{ translations[page.lang].contact }}</sbb-block-link>
            <sbb-block-link href="https://www.sbb.ch/{{page.lang}}/meta/legallines/datenschutz.html">{{ translations[page.lang].dataprivacy }}</sbb-block-link>
            <sbb-block-link-button id="ot-sdk-btn" class="ot-sdk-show-settings">{{ translations[page.lang].cookies }}</sbb-block-link-button>
        </sbb-link-list>

        {#%
            <sbb-toggle class="mode-switch" size="s" value="light">
                <sbb-toggle-option class="switch" icon-name="sunshine-small" value="light" checked></sbb-toggle-option>
                <sbb-toggle-option class="switch" icon-name="moon-small" value="dark"></sbb-toggle-option>
            </sbb-toggle>
         %#}
    </div>

</sbb-footer>