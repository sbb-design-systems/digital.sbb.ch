{% set navPages = collections.level1 | include("data.parent", page.lang) | sortByOrder %}
<sbb-navigation-marker>
    {%- for entry in navPages %}
        <sbb-navigation-button id="{{ entry.data.key }}" {{ helpers.getLinkActiveState(entry.filePathStem, page.url, true) | safe }}>{{ entry.data.title }}</sbb-navigation-button>
    {%- endfor %}
</sbb-navigation-marker>
