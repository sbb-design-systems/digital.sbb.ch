---
layout: sitemap.njk
key: sitemap
title: Sitemap
parent: root
eleventyExcludeFromCollections: true
permalink: /sitemap.xml
---
{% for page in collections.all | exclude("data.hideInSitemap", true) %}{% if page.url | url == "." %}{% else %}{% if page.data.redirect.length %}{% else %}
<url>
    <loc>{{ site.url }}{{ page.url | url }}</loc>
    <xhtml:link rel="alternate" hreflang="de" href="{{ site.url }}/de{{ page.url.slice(3, -1) }}/" /> 
    <xhtml:link rel="alternate" hreflang="fr" href="{{ site.url }}/fr{{ page.url.slice(3, -1) }}/" /> 
    <xhtml:link rel="alternate" hreflang="it" href="{{ site.url }}/it{{ page.url.slice(3, -1) }}/" /> 
    <xhtml:link rel="alternate" hreflang="en" href="{{ site.url }}/en{{ page.url.slice(3, -1) }}/" /> 
    <lastmod>{{ page.date.toISOString() }}</lastmod>
    <changefreq>{{ page.data.changeFreq if page.data.changeFreq else "weekly" }}</changefreq>
</url>{% endif %}{% endif %}{% endfor %}