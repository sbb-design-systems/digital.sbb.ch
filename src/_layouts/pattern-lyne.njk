---
layout: base.njk
---



{% set patternConfig = lyne.components[component].config %}
{% set tag = patternConfig.tag %}

{% if patternConfig.hasPlayground == true %}
  {% set playground = lyne.components[patternConfig.patternId].playground %}
{% endif %}

{% if patternConfig.hasImplementation == true %}
  {% set implementation = lyne.components[patternConfig.patternId].implementation %}
{% endif %}

{% if patternConfig.hasStorybook == true %}
  {% set storybookStories = lyne.stories[0] %}
{% endif %}



{% if (page.lang == "de") or (page.lang == "en") %}
  {% set language = page.lang %}
{% else %}
    {% set language = "de" %}
    {% include "../_includes/pattern-lyne/missing-language.njk" %}
{% endif %}



{% set key = [patternConfig.tag.slice(4), "-lyne_", language] | join %}
{% set subPages = collections[key] %}

{% include "../_includes/pattern-lyne/title.njk" %}




{% if availablelanguages.length %}
  {% include "../_includes/missing-languages.njk" %}
  {% set tabkey = key.slice(0, -2)+"de" %}
{% endif %}


{% if patternConfig.hasOverview == true %}

{% set overviewpath = ["src/_data/lyne/components/", component, "/overview_", language, ".md"] | join %}
{% set overview %}{% include overviewpath %}{% endset %}

{% endif %}


{% if patternConfig.hasAnatomy == true %}

{% set anatomypath = ["src/_data/lyne/components/", component, "/anatomy_", language, ".md"] | join %}
{% set anatomy %}{% include anatomypath %}{% endset %}

{% endif %}




<sbb-tab-group class="tab-documentation" initial-selected-index="0">
{#Overview#}
{% if patternConfig.hasOverview == true %}
    <sbb-tab-label level="1">
    <sbb-icon name="{{lyne.tabs.tabs[0].icon}}" slot="icon"></sbb-icon>
    {{lyne.tabs.tabs[0].label[language]}}
    </sbb-tab-label>
    <sbb-tab>
        {{ overview | renderUsingMarkdown | safe }}
        {% if (patternConfig.childs|length) or (patternConfig.isChildOf|length) %}
            <sbb-card size="xxl" color="milk" class="relative-components">
                <div class="relative-components-lists">
                    {% if patternConfig.childs|length %}
                        <sbb-link-list title-content="Childs">
                            {% for child in patternConfig.childs %}
                                {% set childData = lyne.components[child].config %}
                                {% if childData|length %}
                                    <sbb-block-link style="text-transform: capitalize" icon-name="four-diamonds-small" href="/{{language}}/design-system/lyne/components/{{childData.tag.slice(4)}}/">{{childData.tag.slice(4)}}</sbb-block-link>
                                {% else %}
                                    <sbb-block-link-static style="text-transform: capitalize" icon-name="chevron-small-left-right-small">{{child}}</sbb-block-link-static>
                                {% endif %}
                            {% endfor %}
                        </sbb-link-list>
                    {% endif %}

                    {% if patternConfig.isChildOf|length %}
                        <sbb-link-list title-content="Child of">
                            {% for child in patternConfig.isChildOf %}
                                    {% set childData = lyne.components[child].config %}
                                    {% if childData|length %}
                                        <sbb-block-link style="text-transform: capitalize" icon-name="four-diamonds-small" href="/{{language}}/design-system/lyne/components/{{childData.tag.slice(4)}}/">{{childData.tag.slice(4)}}</sbb-block-link>
                                    {% else %}
                                        <sbb-block-link-static style="text-transform: capitalize" icon-name="chevron-small-left-right-small">{{child}}</sbb-block-link-static>
                                    {% endif %}
                            {% endfor %}
                        </sbb-menu>
                    {% endif %}
                </div>
            </sbb-card>
        {% endif %}
    </sbb-tab>
{% endif %}

{#Anatomy#}
{% if patternConfig.hasAnatomy == true %}
    <sbb-tab-label level="1">
    <sbb-icon name="{{lyne.tabs.tabs[1].icon}}" slot="icon"></sbb-icon>
    {{lyne.tabs.tabs[1].label[language]}}
    </sbb-tab-label>
    <sbb-tab>
        {{ anatomy | renderUsingMarkdown | safe }}
    </sbb-tab>
{% endif %}

{#Playground#}
{% if (patternConfig.hasPlayground == true) or (patternConfig.hasStorybook == true) %}  
    <sbb-tab-label level="2">
      <sbb-icon name="{{lyne.tabs.tabs[2].icon}}" slot="icon"></sbb-icon>
      Demo
    </sbb-tab-label>
    <sbb-tab>
      {% if patternConfig.hasPlayground == true%}
          {% include "../_includes/pattern-lyne/playground.njk" %}
          <script src="/assets/js/lyne-playground.js"></script>
      {% endif %}
      {% if patternConfig.hasStorybook == true %}
          {% include "../_includes/pattern-lyne/storybook-story.njk" %}
          <script src="/assets/js/lyne-examples.js"></script>
      {% endif %}
    </sbb-tab>
{% endif %}

{#Implementation#}
{% if patternConfig.hasImplementation == true %}
    <sbb-tab-label level="2">
      <sbb-icon name="{{lyne.tabs.tabs[3].icon}}" slot="icon"></sbb-icon>
      Implementation
    </sbb-tab-label>
    <sbb-tab>
    {{ implementation | absolutelinks | renderUsingMarkdown | safe }}
    </sbb-tab>
{% endif %}
</sbb-tab-group>

{% include "../_includes/pattern-lyne/sidebar.njk" %}