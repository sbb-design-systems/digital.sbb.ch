{% set breakpoints = [] %}
{% for breakpoint in sizeTokensElement %}
    {% if breakpoint.attributes.subitem in breakpoints %}
    {% else %}
      {% set breakpoints = (breakpoints.push(breakpoint.attributes.subitem), breakpoints) %}
    {% endif %}
{% endfor %}


{% set spacesizes = [] %}
{% for space in sizeTokensElement %}
    {% if space.attributes.item in spacesizes %}
    {% else %}
      {% set spacesizes = (spacesizes.push(space.attributes.item), spacesizes) %}
    {% endif %}
{% endfor %}
<sbb-title level="2">Element Sizes</sbb-title>  
<div class="token-table spacing-responsive-token">
    <div class="row show-from-medium">
        {% for breakpoint in breakpoints %}
                <div class="breakpoint">  
                    <sbb-title level="3" visual-level="5">{{ breakpoint }}</sbb-title>  
                </div>  
        {% endfor %}
    </div>  
    {% for size in spacesizes %}
        <p>sbb-size-element-{{size}}</p>
        <div class="row">
        {% for token in sizeTokensElement %}
            {% if token.attributes.item == size %}
            <div class="breakpoint">
                <div class="space-demo {{token.attributes.subitem}}" style="width: {{ token.value }}px; height: {{ token.value }}px;">       
                </div>  
                <p class="sbb-text-xs"><span class="hide-from-medium">{{token.attributes.subitem}}: </span>{{ token.value }}</p>
            </div>  
            {% else %}
            {% endif %}
        {% endfor %}
        </div>  
    {% endfor %}
</div>  

<sbb-title level="2">Icon UI Sizes</sbb-title>  
<div class="token-table spacing-fixed-token">
    {% for token in sizeTokensUIicon %}
        <div class="row">
            <div class="token-name"><p>{{ token.name }}</p></div>
            <div class="token-value"><p>{{ token.value }}</p></div>
            <div class="token-demo">
                <div class="space-demo {{token.attributes.subitem}}" style="width: {{ token.value }}px; height: {{ token.value }}px;">       
                </div>
            </div>
        </div>
    {% endfor %}
</div>  


