{
    "name": "digital.sbb.ch",
    "version": "1.0.0",
    "description": "digital.sbb.ch",
    "main": "index.js",
    "private": true,
    "scripts": {
        "bundle:lyne": "esbuild .lyne-bundle.js --format=esm --bundle --minify --outfile=dist/assets/js/lyne-bundle.js",
        "copy:components": "cpx './node_modules/list.js/dist/*' 'dist/assets/js/listjs/' --f && cpx './node_modules/ux-components/dist/ux-components/*.*' 'dist/assets/js/ux-components/'  --u",
        "html-minify": "html-minifier-terser --input-dir dist --output-dir dist --file-ext html --remove-comments --collapse-whitespace --conservative-collapse --minify-js false --minify-css true",
        "prestart": "npm run copy:components && npm run bundle:lyne",
        "start": "npx stylelint 'src/assets/css/*.scss' && npx stylelint 'src/assets/css/**/*.scss' && eleventy --serve",
        "build": "npx stylelint 'src/assets/css/*.scss' && npx stylelint 'src/assets/css/**/*.scss' && npm run copy:components && npm run bundle:lyne && BUILD_MODE=production eleventy && npm run html-minify && gzipper compress ./dist"
    },
    "author": "Manuel Cilurzo",
    "license": "ISC",
    "devDependencies": {
        "@11ty/eleventy": "^3.1.2",
        "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
        "@sbb-esta/lyne-design-tokens": "^1.8.0",
        "eleventy-plugin-compress": "^1.0.5",
        "esbuild": "^0.25.10",
        "gzipper": "^7.2.0",
        "stylelint": "^16.24.0",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-standard": "^39.0.0",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-use-logical-spec": "^5.0.1"
    },
    "dependencies": {
        "@11ty/eleventy-fetch": "^5.1.0",
        "@sbb-esta/lyne-elements": "3.11.0",
        "@sbb-esta/lyne-elements-experimental": "3.11.0",
        "@webcomponents/template-shadowroot": "^0.2.1",
        "cpx2": "^8.0.0",
        "html-minifier-terser": "^7.2.0",
        "list.js": "^2.3.1",
        "lodash": "^4.17.21",
        "markdown-it-attrs": "^4.3.1",
        "sass": "^1.93.2",
        "ux-components": "https://github.com/mcilurzo/ux-components/tarball/main"
    }
}
